{
  "compilerOptions": {
    // General
    "pretty": true,
    "listFiles": false,
    "inlineSources": false,
    "removeComments": false, // keep comments to make tests coverage working
    // Targets & outputs
    "target": "ES2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2016", "dom"],
    "noEmit": false,
    "noLib": false,
    "baseUrl": "source",
    // "rootDir": "source",
    "outDir": "./output",
    "declarationDir": "./output",
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    // Debugging
    "sourceMap": true,
    "inlineSourceMap": false,
    // Strictness
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    // Other
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "label"
          ]
        }
      }
    ]
  },
  "include": [
    "./jest.config.ts",
    "source/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}
